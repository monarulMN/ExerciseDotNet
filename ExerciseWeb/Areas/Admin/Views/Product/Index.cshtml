@model List<Product>


<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary bg-gradient py-3 mt-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-3">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="container">
            <div class="text-end ">
                <a asp-controller="Product" asp-action="UpSert" class="btn btn-primary mb-2">
                    <i class="bi bi-plus-lg"></i>Create New Product
                </a>
            </div>
               
            <table id="tblData" class="table table-bordered table-striped ">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>ISBN</th>
                        <th>Price</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody> 
                    @foreach (var obj in Model) 
                    {
                         <tr> 
                             <td>@obj.Title</td> 
                            <td>@obj.ISBN</td> 
                            <td>@obj.ListPrice</td> 
                            <td>@obj.Author</td> 
                            <td>@obj.Category.Name</td> 
                            <td> 
                                <div class="w-75 btn-group" role="group"> 
                                     <a asp-controller="product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-1"> 
                                        <i class="bi bi-pencil-square"></i>  
                                    </a> 
                                    <a asp-controller="product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-1"> 
                                        <i class="bi bi-trash"></i>  
                                     </a> 
                                </div> 
                             </td> 
                        </tr>
                    }

                 </tbody>

            </table>
        </div>
    </div>
</div>

